

<h1>New book</h1>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'CreateBook' %>
  <% end %>

<% @books.each do |book| %>
<div>
  <p><%= image_tag 'no_image' %></p>
  <p><%= book.user.name %> </p>
  <p><%= book.title %></p>
  <p><%= book.body %></p>
<% end %>
</div>