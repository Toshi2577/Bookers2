<div>
  <h1>User info</h1>
  <%= image_tag @user.get_profile_image(100, 100) %>
  <p>name <%= @user.name %></p>
  <p><%= @user.introduction %>introduction</p>
</div>

<h1>New book</h1>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'CreateBook' %>
  <% end %>

<h2>Users</h2>
<%= @users.each do |user| %>
  <%= image_tag user.get_profile_image(100, 100) %>
  <p>name <%= user.name %></p>
  <%= link_to user_path(user) %>
<% end %>

