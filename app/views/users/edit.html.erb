<h2>User info</h2>

<%= form_with model:@user do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofoucus: true, id:"inputName" %>
  <label for="inputImage">ProfileImage</label>
  <%= f.file_field :profile_image, accept: "image/*" %>
  <label for="inputIntroduction">Introduction</label>
  <%= f.text_field :introduction, id:"inputIntroduction" %>
  <%= f.submit "Update User" %>
<% end %>